NAME = school

CC = gcc

SRC = $(wildcard *.c)

OBJ = $(patsubst %.c,%.o,$(wildcard *.c))

RM = rm -f

CFLAGS = -Wall -Werror -Wextra -pedantic

all: $(OBJ)
	$(CC) $(OBJ) -o $(NAME)

clean:
	$(RM) $(NAME) $(wildcard *~) $(find . -type f -name ".*.sw[klmnop]" -delete)

oclean:
	$(RM) $(OBJ)

fclean: clean oclean

re: fclean all
